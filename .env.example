# Lokasi yang ingin dipantau (sesuai nama di Cloudflare Status)
TARGET_LOCATIONS=jakarta,singapore,manila,bangkok,dhaka,hyderabad,tokyo,astana,izmir,kyiv,dar es salaam,gaborone,luanda,mombasa,port louis,ouagadougou,tunis,kinshasa,phnom penh

# Ganti dengan webhook Slack kamu
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxxxx/xxxxxxx/xxxxxxxx

# Interval pengecekan (detik)
SLEEP_INTERVAL=30

# Level log: INFO, DEBUG, WARNING
LOG_LEVEL=INFO

# File persisten untuk status (jangan ubah kecuali tahu apa yang dilakukan)
STATUS_FILE=/data/last_statuses.json